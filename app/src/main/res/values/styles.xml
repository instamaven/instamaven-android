<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme with no ActionBar. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Splash Screen -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="colorPrimary">@android:color/black</item>
    </style>

    <!-- Theme for Activities with ActionBar-->
    <style name="AppTheme.AppBarTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />

    <!-- Theme Rating Bar -->
    <style name="MyRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#484848</item>
        <item name="colorControlActivated">#35d91c</item>
    </style>

    <!-- Theme Rating Bar V2 -->
    <style name="ThemeRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#35d91c</item>
        <item name="colorControlActivated">#35d91c</item>
    </style>

    <!-- Theme Radio Button -->
    <style name="ThemeRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#484848</item>
        <item name="colorControlActivated">#86c351</item>
    </style>

    <!-- Theme Progress Bar -->
    <style name="ThemeProgressBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#ff7300</item>
    </style>

    <!-- Theme Floating Action Button-->
    <style name="ThemeFloatingActionBatton" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#79bf08</item>
    </style>

    <!-- Theme Floating Action Button -->
    <style name="FloatingActionButtonDelete" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#FFDF1A10</item>
    </style>

    <!-- Theme Bottom Action Bar Buttons-->
    <style name="ThemeBottomNavigation">
        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">#0073ff</item>
        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">#000</item>
    </style>

    <!-- Theme ActionBar -->
    <style name="Theme.MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/com_facebook_button_login_background_color</item>
    </style>

    <style name="ThemeOverflowText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="ThemeSearch" parent="RtlOverlay.Widget.AppCompat.Search.DropDown">
        <item name="android:background">#79bf08</item>
    </style>

    <style name="DownUpActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_down_up_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_down_up_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_down_up_close_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_down_up_close_enter</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Theme.Light">
        <item name="android:windowAnimationStyle">@style/DownUpActivity</item>
    </style>

    <!-- Theme Tabs Activities -->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/green</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="black" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="instamaven" parent="AppTheme.Launcher" />

</resources>
